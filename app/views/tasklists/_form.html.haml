= form_for(@tasklist) do |f|
  - if @tasklist.errors.any?
    #error_explanation
      %h2
        = pluralize(@tasklist.errors.count, "error")
        prohibited this tasklist from being saved:
      %ul
        - @tasklist.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .actions
    = f.submit
